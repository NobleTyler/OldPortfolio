<% include ../partials/header %>
<div class = "container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Portfolio</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img  src="<%= project.image %>" class="img-responsive" >
                <div class= "caption-full"></div>
                <h4 class = "pull-right">Tools used: programming </h4>
		<h4><a><%= project.name%></a></h4> 
                <p> <%= project.description %></p>
		<p><em>Submitted By: <%= project.author.username %></em> </p>
		<% if(currentUser && project.author.id.equals(currentUser._id)){ %>
		<a class="btn btn-xs btn-warning" href="/projects/<%= project._id %>/edit">Edit</a>
	    <form id="delete-form"  action="/projects/<%= project._id %>?_method=DELETE" method="POST" >
		<button class="btn btn-xs btn-danger">Delete</button>
	    </form>
	    <% } %>
	    </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/projects/<%= project._id %>/comments/new">Add new comment</a>
                </div>
                <hr>
                <% project.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %> </strong>
                        <span class="pull-right"> 10 days ago </span>
                        <p> <%= comment.text %></p>
                    </div>
                </div>
                <% }); %>
                </div>
            </div>
        </div>
</div>



				<% include ../partials/footer %>
